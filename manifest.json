{
  "manifest_version": 3,
  "name": "Attention training",
  "version": "0.2",
  "description": "Helps you remain focused on a topic of study for extended periods.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "scripts/popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "js": ["scripts/content.js"],
    "run_at": "document_end",
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }],
  "icons": {
    "16":  "icons/16.png",
    "32":  "icons/32.png",
    "64":  "icons/64.png",
    "128": "icons/128.png"
  }
}
